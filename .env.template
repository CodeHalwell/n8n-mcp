# Environment configuration for n8n-mcp
# Copy to .env and fill in values

# n8n API base URL, e.g., https://n8n.example.com/api/v1
N8N_API_URL=
# n8n API key (from user settings)
N8N_API_KEY=

# Deployment environment tag (staging|prod)
N8N_ENV=staging

# Optional: default timeouts (seconds)
HTTP_TIMEOUT=30
